<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AvatarViewer">

    <LinearLayout
        android:id="@+id/avatarre"
        android:padding="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <me.fahmisdk6.avatarview.AvatarView
            android:layout_width="39sp"
            android:layout_height="39sp"></me.fahmisdk6.avatarview.AvatarView>
        <TextView
            android:paddingLeft="19dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Sample text"
            />

    </LinearLayout>

    <agency.tango.android.avatarview.views.AvatarView
        android:id="@+id/avatar_view_example"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:av_border_color="@android:color/white"
        app:av_border_width="4dp"
        app:av_text_size_percentage="35" />
</LinearLayout>